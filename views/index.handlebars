<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">
	<script src="js/{javascript filename}.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	<meta name="viewport" content="width=device-width, initial scale=1.0">

	<!-- Bootstrap -->
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/introHCI.css" rel="stylesheet">

	<link href="css/introHCI.css" rel="stylesheet">
	
</head>

<body>
	<div class="container">
		<h1>My HCI Friends</h1>
		<div class="friend"
		{{#each friends}}
			<h3><a href="{{id}}">{{name}}</a></h3>
			<img src="{{imageURL}}" class="img-responsive" width="500" height="500">
			<p>{{description}}</p>
		</div>
		{{/each}}
		<!-- stuck on slide 25 -->

		<div class="friend container">
			<form id="addFriendForm" role="form" method="get" action="/add">
				<h3>Add a friend</h3>
				<div class="form-group">
				<label for="name">Name:</label>
				<input type="text" class="form-control" id="name" placeholder="Name" name="name">
				</div>
				<div class="form-group">
				<label for="description">Description:</label>
				<input type="text" class="form-control" id="description" placeholder="Description" name="description">
				</div>
				<input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
				
				
			</form>
		</div>
		<hr>
	</div>
</body>
</html>
